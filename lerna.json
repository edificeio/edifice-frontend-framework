{
  "$schema": "node_modules/lerna/schemas/lerna-schema.json",
  "version": "independent",
  "npmClient": "pnpm",
  "command": {
    "version": {
      "allowBranch": [
        "main",
        "develop",
        "develop*",
        "hotfix/*"
      ],
      "conventionalCommits": true,
      "message": "chore: version & publish %s"
    }
  }
}